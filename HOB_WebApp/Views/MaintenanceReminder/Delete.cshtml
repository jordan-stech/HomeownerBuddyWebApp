@model HOB_WebApp.Models.MaintenanceReminders

@{
	ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this maintenance reminder?</h3>
<div>
	<hr />
    <dl class="row">
        <dt class="col-sm-2">
            Reminder Item
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReminderItem)
        </dd>
        <dt class="col-sm-2">
            Reminder Task
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Reminder)
        </dd>
        <dt class="col-sm-2">
            Action To Take
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            Notification Frequency
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NotificationInterval)
        </dd>
        <dt class="col-sm-2">
            Spring
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeasonSpring)
        </dd>
        <dt class="col-sm-2">
            Summer
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeasonSummer)
        </dd>
        <dt class="col-sm-2">
            Fall
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeasonFall)
        </dd>
        <dt class="col-sm-2">
            Winter
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SeasonWinter)
        </dd>
        <dt class="col-sm-2">
            Action Plan
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ActionPlanTitle)
        </dd>
    </dl>

	<form asp-action="Delete">
		<input type="hidden" asp-for="Id" />
		<input type="submit" value="Delete" class="btn btn-danger" /> |
		<a asp-action="Index">Back to List</a>
	</form>
</div>
