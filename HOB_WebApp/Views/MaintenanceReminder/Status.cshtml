@model IEnumerable<HOB_WebApp.Models.UserReminders>

@{
    ViewData["Title"] = "Status";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/maintenanceReminders.css">
</head>

<body>
    <div class="maintenance-reminder-container">
        <h1 class="maintenance-reminder-header">Reminder Status</h1>

        <form asp-controller="Movies" asp-action="Index">
            <p>
                Home Owner ID: <input type="text" name="SearchString">
                <input type="submit" value="Search" />
            </p>
        </form>

        <table class="table">
            <thead>
                <tr>
                    <th>
                        Home owner ID
                    </th>
                    <th class="text-center">
                        First Name
                    </th>
                    <th class="text-center">
                        Last Name
                    </th>
                    <th class="text-center">
                        Reminder
                    </th>
                    <th class="text-center">
                        Completed
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserId)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.FName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.LName)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Reminder)
                    </td>
                    <td class="text-center">
                        @Html.DisplayFor(modelItem => item.Completed)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="delete-maintenance-reminder">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>

</html>