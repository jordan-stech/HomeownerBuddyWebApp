@model IEnumerable<HOB_WebApp.Models.HomeCodes>

@{
    ViewData["Title"] = "Index";
}

<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/homeCode.css">
    <link rel="stylesheet" href="~/css/maintenanceReminders.css" />
    <link rel="stylesheet" href="~/css/createActionPlan.css" />
</head>

<body>
    <div class="page-header">
        <div class='btn-toolbar float-right'>
            <div class='btn-group'>
                <a asp-action="Create"><button id="btnAddTag" type='button' class='btn btn-primary p-3' style="font-size:17px"><i class="fa fa-plus-circle icon"></i>Create New Home Code</button></a>
            </div>
        </div>
        <h1 class="home-code-header">Home Codes</h1>
    </div>
    <div class="combined-container">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Home Code
                    </th>
                    <th>
                        Address
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                    {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="delete-home-code">Delete</a>
                    </td>
                </tr>
                    }
            </tbody>
        </table>
    </div>
</body>
</html>