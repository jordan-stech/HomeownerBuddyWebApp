@using Microsoft.AspNetCore.Identity
@using HOB_WebApp.Models

@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - HOB_WebApp</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
    </head>

    <body>
        @if (SignInManager.IsSignedIn(User))
        {
            <header>
                <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container">
                        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img class="nav-bar-img" src="~/img/ColoredLogo.jpg" height="60" width="60" /></a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <partial name="_LoginPartial" />
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <button class="dropbtn">Action Plan</button>
                                        <div class="dropdown-content">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="ActionPlan" asp-action="Index">View Action Plans</a>
                                            <a class="nav-link text-dark" asp-area="" asp-controller="ActionPlan" asp-action="CreateActionPlan">Create New Action Plan</a>
                                        </div>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <button class="dropbtn">Service Providers</button>
                                        <div class="dropdown-content">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="ServiceProviderModels" asp-action="Index">View Service Providers</a>
                                            <a class="nav-link text-dark" asp-area="" asp-controller="ServiceProviderModels" asp-action="Create">Create New Service Provider</a>
                                        </div>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <button class="dropbtn">Home Codes</button>
                                        <div class="dropdown-content">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="HomeCodes" asp-action="Index">View Home Codes</a>
                                            <a class="nav-link text-dark" asp-area="" asp-controller="HomeCodes" asp-action="Create">Create New Home Code</a>
                                        </div>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <div class="dropdown">
                                        <button class="dropbtn">Mobile Users</button>
                                        <div class="dropdown-content">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="MobileUsers" asp-action="Index">View Mobile Users</a>
                                        </div>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
        }
        <div class="container">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>

        <footer class="border-top footer text-muted">
            <div class="footer-div">
                &copy; 2020 - Habitat Homeowner Buddy
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>
